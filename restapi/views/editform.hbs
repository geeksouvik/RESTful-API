<div class="container">
  <h1>{{title}}</h1>
  <hr />
  <div class="row">
    <div class="col-md-6">
      <form action="/person/edit/{{person.id}}" method="post">
          <div class="form-group">
              <input type="text" name="name" class="form-control" value={{person.name}} placeholder="Person Name" />
          </div>
          <div class="form-group">
              <input type="text" name="age" class="form-control" value={{person.age}} placeholder="Age" />
          </div>
          <div class="form-group">
              <input type="text" name="gender" class="form-control" value={{person.gender}} placeholder="Gender" />
          </div>
          <div class="form-group">
              <input type="text" name="mobile" class="form-control" value={{person.mobile}} placeholder="Mobile" />
          </div>
          <div class="form-group">
              <button class="btn btn-info">Save Person</button>
          </div>
      </form>
    </div>
  </div>
</div>